<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <TextView
        android:id="@+id/login"
        android:layout_width="257dp"
        android:layout_height="54dp"
        android:layout_marginLeft="26dp"
        android:layout_marginTop="180dp"
        android:layout_marginRight="102dp"
        android:text="Login"
        android:textColor="#000000"
        android:textSize="36.41sp"
        android:textStyle="bold"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintHorizontal_weight="600"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/email"
        android:layout_width="324.01dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="28dp"
        android:text="Email"
        android:textColor="#736B6B"
        android:textSize="14dp"
        app:layout_constraintTop_toBottomOf="@+id/login"
        tools:layout_editor_absoluteX="26dp" />

    <EditText
        android:id="@+id/inputemail"
        android:layout_width="324.01dp"
        android:layout_height="30dp"
        app:layout_constraintTop_toBottomOf="@+id/email"
        android:inputType="textEmailAddress"
        android:hint="Your Email or phone"
        android:paddingLeft="10dp"
        android:textSize="14dp"
        android:background="@drawable/botron"
        tools:layout_editor_absoluteX="26dp" />

    <TextView
        android:id="@+id/password"
        android:layout_width="324.01dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="28dp"
        android:text="Password"
        android:textColor="#736B6B"
        app:layout_constraintTop_toBottomOf="@+id/inputemail"
        android:textSize="14dp"
        tools:layout_editor_absoluteX="26dp" />

    <EditText
        android:id="@+id/inputpassword"
        android:layout_width="324.01dp"
        android:layout_height="30dp"
        android:inputType="textPassword"
        android:hint="Password"
        app:layout_constraintTop_toBottomOf="@+id/password"
        android:paddingLeft="10dp"
        android:textSize="14dp"
        android:background="@drawable/botron"
        tools:layout_editor_absoluteX="26dp"
        />
    <ImageView
        android:id="@+id/elipse2"
        android:layout_width="96dp"
        android:layout_height="96dp"
        android:layout_marginLeft="-46dp"
        android:layout_marginTop="-21dp"
        tools:layout_editor_absoluteX="-15dp"
        tools:layout_editor_absoluteY="-14dp"
        tools:srcCompat="@drawable/elipse2" />

    <ImageView
        android:id="@+id/elipse1"
        android:layout_width="165dp"
        android:layout_height="165dp"
        android:layout_marginLeft="-5dp"
        android:layout_marginTop="-99dp"
        tools:layout_editor_absoluteX="0dp"
        tools:layout_editor_absoluteY="-53dp"
        tools:srcCompat="@drawable/elipse1" />

    <ImageButton
        android:id="@+id/vector"
        android:layout_width="43.47dp"
        android:layout_height="36.5dp"
        android:layout_marginBottom="107.96dp"
        android:layout_marginTop="35.54dp"
        android:layout_marginLeft="30.89dp"
        android:layout_marginRight="300.64dp"
        app:layout_constraintBottom_toTopOf="@+id/login"
        tools:layout_editor_absoluteX="26dp"
        tools:srcCompat="@drawable/Vector" />

    <TextView
        android:id="@+id/forgot"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Forgot password ?"
        tools:layout_editor_absoluteX="149dp"
        tools:layout_editor_absoluteY="474dp"
        android:layout_marginLeft="88dp"
        android:layout_marginRight="87dp"
        android:layout_marginBottom="304dp"
        android:textColor="@color/orange"
        android:textSize="14dp"
        app:layout_constraintTop_toBottomOf="@+id/inputpassword"
        android:layout_marginTop="50.36dp"
        />

    <Button
        android:id="@+id/loginbutton"
        android:layout_width="248dp"
        android:layout_height="60dp"
        android:layout_marginTop="32dp"
        android:layout_marginLeft="65dp"
        android:layout_marginRight="62dp"
        android:text="Login"
        app:layout_constraintTop_toBottomOf="@+id/forgot"
        tools:layout_editor_absoluteX="81dp"
        android:background="@drawable/botronbutton"
        />

    <TextView
        android:id="@+id/line"
        android:layout_width="147dp"
        android:layout_height="22dp"
        android:layout_marginTop="32dp"
        android:text="Dont have an account?"
        android:textSize="14dp"
        app:layout_constraintTop_toBottomOf="@+id/loginbutton"
        tools:layout_editor_absoluteX="118dp" />

    <TextView
        android:id="@+id/line2"
        android:layout_width="wrap_content"
        android:layout_height="22dp"
        android:layout_marginStart="4dp"
        android:layout_marginTop="32dp"
        android:text="Login"
        android:textColor="@color/orange"
        android:textSize="14dp"
        app:layout_constraintStart_toEndOf="@+id/line"
        app:layout_constraintTop_toBottomOf="@+id/loginbutton" />


    <ImageView
        android:id="@+id/FvsG"
        android:layout_width="325dp"
        android:layout_height="86dp"

        app:layout_constraintTop_toBottomOf="@+id/line"
        tools:layout_editor_absoluteX="59dp"

        tools:srcCompat="@drawable/group" />

    <ImageView
        android:id="@+id/elipse"
        android:layout_width="195dp"
        android:layout_height="142dp"
        tools:layout_editor_absoluteX="218dp"
        tools:layout_editor_absoluteY="-22dp"
        tools:srcCompat="@drawable/elipse" />






</android.support.constraint.ConstraintLayout>